{
  "name": "flarumite/simple-spoilers",
  "description": "BBCode spoilers (with custom title support) with pure HTML and CSS.",
  "keywords": [
    "flarum",
    "spoiler",
    "bbcode",
    "html5"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.15"
  },
  "authors": [
    {
      "name": "David Wheatley",
      "email": "flarumite@davwheat.dev",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/flarumite/simple-spoilers/issues",
    "source": "https://github.com/flarumite/simple-spoilers",
    "forum": "https://discuss.flarum.org/d/26366"
  },
  "autoload": {
    "psr-4": {
      "Flarumite\\SimpleSpoilers\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Flarumite Simple Spoilers",
      "category": "formatting",
      "icon": {
        "name": "far fa-window-maximize",
        "backgroundColor": "#008000",
        "color": "#fff"
      }
    },
    "flagrow": {
      "discuss": ""
    }
  }
}
